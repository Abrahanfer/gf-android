<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">


    <ImageButton
        android:id="@+id/feedAvatarRead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_clear"
        android:src="@drawable/read_imagebutton"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/textFeedItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/favouriteButton"
        android:layout_toEndOf="@+id/feedAvatarRead"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:textColor="@color/feed_item_title_text_color"/>

    <TextView
        android:id="@+id/textFeedItemPubDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFeedItemTitle"
        android:layout_toStartOf="@+id/favouriteButton"
        android:layout_toEndOf="@+id/feedAvatarRead"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="10sp"
        android:textColor="@color/feed_item_pub_date_text_color"
        />

    <ImageButton
        android:id="@+id/favouriteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/fav_star"
        android:background="@color/color_clear"
        android:tint="@color/color_primary"/>
