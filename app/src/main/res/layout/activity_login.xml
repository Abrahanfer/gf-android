<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@color/color_primary"
                android:clickable="true"
    tools:context="me.abrahanfer.geniusfeed.LoginActivity">


    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/pbLoading"
        android:theme="@style/CircularProgress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_username"
        android:textSize="24sp"
        android:textColor="@color/textviewstatelist"
        android:gravity="center"
        android:id="@+id/loginLabelUsername"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:minWidth="200dp"
        android:visibility="gone"
        android:background="@color/color_primary"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUsername"
        android:textColor="@color/textviewstatelist"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:minWidth="200dp"
        android:inputType="text"
        android:hint="@string/login_username_hint" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_password"
        android:textColor="@color/textviewstatelist"
        android:textSize="24sp"
        android:gravity="center"
        android:id="@+id/loginLabelPassword"
        android:layout_below="@+id/editTextUsername"
        android:layout_marginStart="40dp"
        android:layout_centerInParent="true"
        android:minWidth="200dp"
        android:visibility="gone"
        android:background="@color/color_primary"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword"
        android:textColor="@color/textviewstatelist"
        android:layout_below="@+id/editTextUsername"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:minWidth="200dp"
        android:inputType="textPassword"
        android:hint="@string/login_password_hint" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/color_primary_light"
        android:textColor="@color/color_text_secondary"
        android:text="Login"
        android:id="@+id/buttonLogin"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextPassword"
        android:layout_alignEnd="@+id/editTextPassword"
        android:minWidth="200dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:onClick="setCredentials"
        android:clickable="true"/>


</RelativeLayout>
